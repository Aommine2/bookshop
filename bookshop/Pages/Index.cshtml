@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["NoContainer"] = true;
}

<style>
    .book-item img {
        width: 100%;
        height: 260px;
        object-fit: contain;
        background: radial-gradient(white 50%, lightblue 100%)
    }

    .book-item {
        transition: all 0.3 ease;
    }

        .book-item:hover {
            transform: scale(1.05);
        }
</style>

<!-- hero section -->
<div class="py-5" style="background-color: lightskyblue;">
    <div class="container text-white">
        <div class="row">
            <div class="col-md-6 pb-3">
                <h1 class="display-2"><strong>Best Books</strong></h1>
                <br />
                <p>
                    we have the best book in the world. You will love reading them.
                    we have a large section of books from diffrent categories.
                    You will definitely find what what makes you happy
                </p>
                <br />
                <form class="d-flex" action="/Books">
                    <input class="form-control me-2" name="search" placeholder="Search By Title or Author">
                    <button class="btn btn-outline-light" type="submit">Search</button>
                </form>
            </div>
            <div class="col-md-6">
                <img src="/images/books.png" class="img-fluid rounded"></img>
            </div>
        </div>
    </div>
</div>

<!-- Newest book section-->
<div class="py-5">
    <div class="container">
        <h1 class="pb-5 text-center display-5"><strong>Newest Books</strong></h1>
        <div class="row">
            @foreach (var item in Model.listNewestBooks)
            {
                <div class="col-lg-3 col-sm-6 my-2">
                    <div class="card shadow text-center h-100 book-item">
                        <img src="/images/books/@item.ImageFileName" class="card-img-top p-3" alt="...">
                        <div class="card-body">
                            <h4>@item.Title</h4>
                            <p>Author: @item.Authtors, Category: @item.Category, Pages: @item.NumPages</p>
                            <h4>@(item.Price)$</h4>
                            <a class="btn btn-primary btn-sm my-2" href="/BookDetails?id=@(item.Id)" role="button">Details</a>
                            <button type="button" class="btn btn-warning btn-sm my-2 " onclick="addToCart(this, @item.Id)">
                                Add to Cart <i class="bi bi-cart"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Top sell section-->

<div class="py-5" style="background-color: wheat;">
    <div class="container">
        <h1 class="pb-5 text-center display-5"><strong>Top Sales</strong></h1>
        <div class="row">
            @foreach (var item in Model.listTopSales)
            {
                <div class="col-lg-3 col-sm-6 my-2">
                    <div class="card shadow text-center h-100 book-item">
                        <img src="/images/books/@item.ImageFileName" class="card-img-top p-3" alt="...">
                        <div class="card-body">
                            <h4>@item.Title</h4>
                            <p>Author: @item.Authtors, Category: @item.Category, Pages: @item.NumPages</p>
                            <h4>@(item.Price)$</h4>
                            <a class="btn btn-primary btn-sm my-2" href="/BookDetails?id=@(item.Id)" role="button">Details</a>
                            <button type="button" class="btn btn-warning btn-sm my-2" onclick="addToCart(this, @item.Id)">
                                Add to Cart <i class="bi bi-cart"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>